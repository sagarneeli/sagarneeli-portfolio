{
  "version": 2,
  "framework": "nextjs",
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/next" }
  ],
  "installCommand": "cd frontend && npm ci",
  "buildCommand": "cd frontend && npm run build",
  "devCommand": "cd frontend && npm run dev",
  "env": {
    "NEXT_TELEMETRY_DISABLED": "1",
    "HUSKY": "0",
    "HUSKY_SKIP_INSTALL": "1"
  }
}
